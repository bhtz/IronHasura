{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "console-route" : {
        "ClusterId": "console",
        "Match": {
          "Path": "{**catch-all}"
        }
      },

      "api-route" : {
        "ClusterId": "api",
        "Match": {
          "Path": "/rest/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/rest"
          }
        ]
      }
    },
    "Clusters": {
      "console": {
        "Destinations": {
          "console-app": {
            "Address": "http://host.docker.internal:8086"
          }
        }
      },

      "api": {
        "Destinations": {
          "rest-app": {
            "Address": "http://host.docker.internal:8087/"
          }
        }
      }
    }
  }
}
