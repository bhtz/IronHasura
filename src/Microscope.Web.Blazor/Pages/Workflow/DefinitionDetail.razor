@page "/workflow-definitions/{Id}"
@attribute [Authorize]
<PageTitle>Workflow definition @Id</PageTitle>

<elsa-studio-root server-url="@Host" monaco-lib-path="_content/Elsa.Designer.Components.Web/monaco-editor/min">
    <elsa-workflow-definition-editor-screen workflow-definition-id="@Id" />
</elsa-studio-root>

@code {
    [Parameter] public string Id { get; set; }
    
    public string Host { get; set; }

    protected override void OnInitialized()
    {
        Host = _navigationManager.BaseUri;
        base.OnInitialized();
    }

}


