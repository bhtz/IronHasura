@page "/workflow-instances/{Id}"
@using Microsoft.JSInterop
@inject IJSRuntime JS;

<PageTitle>Workflow instance</PageTitle>

<elsa-studio-root server-url="@Host" monaco-lib-path="_content/Elsa.Designer.Components.Web/monaco-editor/min">
    <elsa-workflow-instance-viewer-screen workflow-instance-id="@Id"></elsa-workflow-instance-viewer-screen>
</elsa-studio-root>

@code {
    [Parameter] public string Id { get; set; }
    
    public string Host { get; set; }

    protected override void OnInitialized()
    {
        Host = _navigationManager.BaseUri;
        base.OnInitialized();
    }
}