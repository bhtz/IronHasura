@page "/workflow-registry/{Id}"
@using Microsoft.JSInterop
@inject IJSRuntime JS;
@attribute [Authorize]
<PageTitle>Workflow registry details</PageTitle>

<elsa-studio-root server-url="@Host" monaco-lib-path="_content/Elsa.Designer.Components.Web/monaco-editor/min">
    <elsa-workflow-blueprint-viewer-screen workflow-definition-id="@Id" />
</elsa-studio-root>

@code {
    [Parameter] public string Id { get; set; }
    
    public string Host { get; set; }

    protected override void OnInitialized()
    {
        Host = _navigationManager.BaseUri;
        base.OnInitialized();
    }
}